#
# centralized configuration utility for zap
#
# other zap tools should use this script to query and set configuration
#

CFGDIR="/etc/zap"
CACHE_DIR="/var/zap/cache"
IMAGE_DIR="/var/zap/images"
DOCKER_DIR="/var/zap/docker"
CACHE_CFG="${CFGDIR}/cache_dir"
IMAGE_CFG="${CFGDIR}/image_dir"
DOCKER_CFG="${CFGDIR}/docker_dir"
PROXY_CFG="${CFGDIR}/proxy_cfg"

#
# global context switch
# will force all configuration to be relative to the alternate root
#
case $1 in
-C)
	ALTROOT="$2"
	shift
	shift
	if [ ! -d "$ALTROOT" ]; then
	    echo "ERROR: alternate root $ALTROOT doesn't exist"
	    exit 1
	fi
	CFGDIR="${ALTROOT}/${CFGDIR}"
	CACHE_DIR="${ALTROOT}/${CACHE_DIR}"
	IMAGE_DIR="${ALTROOT}/${IMAGE_DIR}"
	DOCKER_DIR="${ALTROOT}/${DOCKER_DIR}"
	CACHE_CFG="${CFGDIR}/cache_dir"
	IMAGE_CFG="${CFGDIR}/image_dir"
	DOCKER_CFG="${CFGDIR}/docker_dir"
	PROXY_CFG="${CFGDIR}/proxy_cfg"
	;;
esac

case $1 in
list-pkg-repos)
	if [ -f "${CFGDIR}/repo.list" ]; then
	    #
	    # this is performance sensitive as so many things call it
	    # inline is 30% quicker than sort|awk
	    #
	    typeset -A repos
	    while read -r n p
	    do
		repos[$p]=$n
	    done < "${CFGDIR}/repo.list"
	    while [[ ${#repos[@]} -gt 0 ]]
	    do
		k=(${!repos[@]})
		for j in "${!repos[@]}"
		do
		    if [ ${repos[$j]} -lt ${repos[$k]} ]; then
			k=$j
		    fi
		done
		echo "$k"
		unset repos[$k]
	    done
	fi
	;;
list-overlay-repos)
	if [ -f "${CFGDIR}/overlays.list" ]; then
	    #
	    # not quite so performance sensitive
	    # but use the same algorithm anyway
	    #
	    typeset -A repos
	    while read -r n p
	    do
		repos[$p]=$n
	    done < "${CFGDIR}/overlays.list"
	    while [[ ${#repos[@]} -gt 0 ]]
	    do
		k=(${!repos[@]})
		for j in "${!repos[@]}"
		do
		    if [ ${repos[$j]} -lt ${repos[$k]} ]; then
			k=$j
		    fi
		done
		echo "$k"
		unset repos[$k]
	    done
	fi
	;;
repo-url)
	if [ -f "${CFGDIR}/repositories/${2}.repo" ]; then
	    while read -r line
	    do
		case $line in
		    URL=*)
			echo "${line#*=}"
			exit 0
			;;
		esac
	    done<"${CFGDIR}/repositories/${2}.repo"
	fi
	;;
repo-signer)
	if [ -f "${CFGDIR}/repositories/${2}.repo" ]; then
	    while read -r line
	    do
		case $line in
		    SIGNED=*)
			echo "${line#*=}"
			exit 0
			;;
		esac
	    done<"${CFGDIR}/repositories/${2}.repo"
	fi
	echo "no"
	;;
overlay-url)
	if [ -f "${CFGDIR}/repositories/${2}.ovl" ]; then
	    while read -r line
	    do
		case $line in
		    URL=*)
			echo "${line#*=}"
			exit 0
			;;
		esac
	    done<"${CFGDIR}/repositories/${2}.ovl"
	fi
	;;
cache-dir)
	if [ -f "${CACHE_CFG}" ]; then
	    CACHE_DIR=${ALTROOT}/$(<"${CACHE_CFG}")
	fi
	if [ ! -d "${CACHE_DIR}" ]; then
	    /usr/bin/mkdir -p "${CACHE_DIR}" 2> /dev/null
	fi
	if [ -d "${CACHE_DIR}" ]; then
	    echo "$CACHE_DIR"
	else
	    echo "/tmp"
	fi
	;;
image-dir)
	if [ -f "${IMAGE_CFG}" ]; then
	    IMAGE_DIR=${ALTROOT}/$(<"${IMAGE_CFG}")
	fi
	if [ ! -d "${IMAGE_DIR}" ]; then
	    /usr/bin/mkdir -p "${IMAGE_DIR}" 2> /dev/null
	fi
	if [ -d "${IMAGE_DIR}" ]; then
	    echo "$IMAGE_DIR"
	else
	    echo "/tmp"
	fi
	;;
docker-dir)
	if [ -f "${DOCKER_CFG}" ]; then
	    DOCKER_DIR=${ALTROOT}/$(<"${DOCKER_CFG}")
	fi
	if [ ! -d "${DOCKER_DIR}" ]; then
	    /usr/bin/mkdir -p "${DOCKER_DIR}" 2> /dev/null
	fi
	if [ -d "${DOCKER_DIR}" ]; then
	    echo "$DOCKER_DIR"
	else
	    echo "/tmp/docker"
	fi
	;;
proxy)
	if [ -f "${PROXY_CFG}" ]; then
	    cat "${PROXY_CFG}"
	fi
	;;
pkgversion)
	if [ -f /var/sadm/pkg/TRIBzap/pkginfo ]; then
	    IVERSION=""
	    while read -r line
	    do
		case $line in
		    VERSION*)
			IVERSION=${line#*=}
			break
			;;
		esac
	    done</var/sadm/pkg/TRIBzap/pkginfo
	    echo "$IVERSION"
	    exit 0
	else
	   echo "standalone"
	   exit 1
	fi
	;;
esac
