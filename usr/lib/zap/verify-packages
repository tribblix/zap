#
# checks all packages to see if any need updating
# with -u, actually updates them
#
ZAPLIBDIR="/usr/lib/zap"
DESTROOT=""

case $1 in
-R)
	DESTROOT="$2"
	CTXARGS="-C ${DESTROOT}"
	shift
	shift
	if [ ! -d "$DESTROOT" ]; then
	    echo "ERROR: alternate root $DESTROOT doesn't exist"
	    exit 1
	fi
	if [ ! -d "$DESTROOT/var/sadm/pkg" ]; then
	    echo "ERROR: alternate root $DESTROOT is invalid"
	    exit 1
	fi
	;;
esac

ACTION="list"
SRCARGS=""
while getopts "us:" opt; do
case $opt in
u)
    ACTION="update"
    ;;
s)
    SRCARGS="-s ${OPTARG}"
    ;;
esac
done
shift $((OPTIND - 1))

STATUS=0

#
# then check packages
#
${ZAPLIBDIR}/get-version ${CTXARGS} $(/bin/ls -1 "${DESTROOT}"/var/sadm/pkg) | while read -r AFVERSION
do
    AVERSION=${AFVERSION% *}
    pkg=${AVERSION%%.*}
    if [ "$AFVERSION" != "$pkg" ]; then
	AREPO=${AFVERSION#* }
	IVERSION=""
	while read -r line
	do
	    case $line in
		VERSION*)
		    IVERSION=${line#*=}
		    break
		    ;;
	    esac
	done<"${DESTROOT}/var/sadm/pkg/${pkg}/pkginfo"
	if [ "$AREPO" != "opensxce" ]; then
	    if [ "X${pkg}.${IVERSION}" != "X${AVERSION}" ]; then
		case $ACTION in
		    list)
			echo "WARN: package ${pkg} needs updating to ${AVERSION#*.}"
			STATUS=2
			;;
		    update)
			${ZAPLIBDIR}/update-package ${CTXARGS} ${SRCARGS} "${pkg}"
			;;
		esac
	    fi
	fi
    else
	  echo "DEBUG: package $pkg not in catalog"
    fi
done

exit $STATUS
